<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dyreinternat Dashboard Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #f4f6f9;
            font-family: Arial, sans-serif;
        }
        .sidebar {
            height: 100%;
            background-color: #2c3e50;
            color: white;
            padding-top: 20px;
            position: fixed;
            width: 250px;
            left: 0;
        }
        .sidebar a {
            color: white;
            padding: 12px 20px;
            text-decoration: none;
            display: block;
        }
        .sidebar a:hover {
            background-color: #1abc9c;
        }
        .content {
            margin-left: 260px;
            padding: 20px;
        }
        .card {
            margin-bottom: 20px;
        }
        .card-header {
            background-color: #0066cc;
            color: white;
        }
        .card-body {
            background-color: #ffffff;
        }
        .stats-container {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }
        .stat-card {
            background-color: #007bff;
            color: white;
            padding: 20px;
            margin: 10px;
            border-radius: 8px;
            flex: 1;
            min-width: 200px;
            text-align: center;
        }
        .stat-card i {
            font-size: 40px;
            margin-bottom: 10px;
        }
        .logout-btn {
            background-color: #ff4d4d;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
        }
        .logout-btn:hover {
            background-color: #e60000;
        }
        .animal-card {
            text-align: center;
            background-color: white;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .animal-card img {
            max-width: 100%;
            border-radius: 10px;
        }
        .animal-card h3 {
            margin-top: 10px;
            color: #2c3e50;
        }
        .animal-card p {
            font-size: 1rem;
        }
    </style>
</head>
<body>
<!-- Sidebar -->
<div class="sidebar">
    <h3 class="text-center">Dyreinternat Dashboard Admin</h3>
    <a href="/dashboard">Hjem</a>
    <a href="/allUsers">Brugere</a>
</div>

<!-- Content -->
<div class="content">
    <h2>Velkommen til dit Dashboard, <%= username %>!</h2>

    <!-- Statistics -->
    <div class="stats-container">
        <div class="stat-card">
            <i class="fas fa-users"></i>
            <h4>Antal Brugere</h4>
            <p id="userCount"><%= userCount %></p>
        </div>
        <div class="stat-card">
            <i class="fas fa-paw"></i>
            <h4>Antal Dyr</h4>
            <p id="animalCount"><%= animalCount %></p> <!-- Vis antal dyr -->
        </div>
    </div>

    <!-- Animal Adoption Overview -->
    <h3>Dyre Oversigt</h3>
    <div class="row">
        <% animals.forEach(animal => { %>
            <div class="col-md-4">
                <div class="animal-card">
                    <img src="<%= animal.image %>" alt="<%= animal.name %>">
                    <h3><%= animal.name %></h3>
                    <p><%= animal.description %></p>
                </div>
            </div>
        <% }); %>
    </div>

    <!-- Latest Activities -->
    <div class="card">
        <div class="card-header">
            Seneste Aktivitet
        </div>
        <div class="card-body">
            <ul>
                <% activities.forEach(activity => { %>
                    <li><%= activity %></li>
                <% }); %>
            </ul>
        </div>
    </div>

    <a href="/logout" class="logout-btn">Log ud</a>
    <a href="/createPet" class="logout-btn">Opret dyr</a>
</div>
</body>
</html>