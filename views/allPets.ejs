<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dyreinternat Dashboard Admin - Kæledyr</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #f4f6f9;
            font-family: Arial, sans-serif;
        }
        .sidebar {
            height: 100%;
            background-color: #2c3e50;
            color: white;
            padding-top: 20px;
            position: fixed;
            width: 250px;
            left: 0;
        }
        .sidebar a {
            color: white;
            padding: 12px 20px;
            text-decoration: none;
            display: block;
        }
        .sidebar a:hover {
            background-color: #1abc9c;
        }
        .content {
            margin-left: 260px;
            padding: 20px;
        }
        .card {
            margin-bottom: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            background-color: #0066cc;
            color: white;
            font-weight: bold;
        }
        .card-body {
            background-color: white;
            border-radius: 10px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        th {
            background-color: #2c3e50;
            font-weight: bold;
            text-transform: uppercase;
        }
        td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        h1 {
            color: #2c3e50;
        }
        .count {
            margin-bottom: 20px;
            font-size: 1.2em;
            color: #555;
        }
        .btn {
            padding: 5px 10px;
            font-size: 0.9em;
        }
    </style>
    <script>
        function confirmDelete(event) {
            // Bekræftelse dialog
            if (!confirm("Er du sikker på, at du vil slette dette dyr?")) {
                event.preventDefault();  // Forhindrer formularen i at blive sendt
            }
        }
    </script>
</head>
<body>
<!-- Sidebar -->
<div class="sidebar">
    <h3 class="text-center">Dyreinternat Dashboard Admin</h3>
    <a href="/dashboardadmin">Hjem</a>
    <a href="/allUsers" class="active">Brugere</a>
    <a href="/allPets" class="active">Dyr</a>
</div>

<!-- Content -->
<div class="content">
    <h1>Kæledyr</h1>
    <p class="count">Total Pets: <%= petCount %></p>

    <!-- Pets Table -->
    <div class="card">
        <div class="card-header">Kæledyrsoversigt</div>
        <div class="card-body">
            <table class="table">
                <thead>
                <tr>
                    <th>Dyr</th>
                    <th>Race</th>
                    <th>Navn</th>
                    <th>Alder</th>
                    <th>Vægt</th>
                    <th>Beskrivelse</th>
                    <th>ID på ejeren</th>
                    <th>Handlinger</th>
                </tr>
                </thead>
                <tbody>
                <% if (pets.length > 0) { %>
                    <% pets.forEach(pet => { %>
                        <tr>
                            <td><%= pet.animal %></td>
                            <td><%= pet.race %></td>
                            <td><%= pet.name %></td>
                            <td><%= pet.age %></td>
                            <td><%= pet.weight %></td>
                            <td><%= pet.description %></td>
                            <td><%= pet.ownerId || "Ikke angivet" %></td>
                            <td>
                                <!-- Edit Button -->
                                <a href="/editPet/<%= pet._id %>" class="btn btn-primary btn-sm">Rediger</a>
                                <!-- Delete Button with confirmation -->
                                <form action="/deletePet/<%= pet._id %>" method="POST" style="display:inline;" onsubmit="confirmDelete(event)">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-danger btn-sm">Slet</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="8">Ingen kæledyr fundet.</td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

</body>
</html>
